<form {{on "submit" this.submitForm}}>
  <div class="grid grid-cols-1 gap-2 sm:grid-cols-10 sm:gap-4 sm:items-center">
    <label for="username" class="sm:col-span-3">
      User address (JID)
    </label>
    <div class="mb-4 sm:mb-0 sm:col-span-7 flex justify-center items-center">
      <input id="username" name="username" type="text" value={{this.username}}
             class="min-w-0" />
      <span class="flex-0 mx-1 text-xl">@</span>
      <input id="host" name="host" type="text" value={{this.host}}
             class="min-w-0" />
    </div>
    <label for="password" class="sm:col-span-3">
      Password
    </label>
    <input id="password" name="password" type="password" value={{this.password}}
           class="sm:col-span-7" />
  </div>

  <div class="w-full mt-12 sm:flex sm:justify-center">
    <input type="submit" value="Continue"
           class="w-full sm:w-1/2 btn-md btn-blue" />
  </div>
</form>