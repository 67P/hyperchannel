<span class="chat-message__username"
      data-username={{message.nickname}}
      onclick={{action "usernameClick" message.nickname}}>
  {{message.nickname}}:
</span>

<time class="chat-message__date" datetime={{datetime}} title={{dateTitle}}>
  {{moment-format message.date "HH:mm"}}
</time>

<span class="chat-message__message">
  {{formattedContent}}
</span>
