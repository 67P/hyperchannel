<button type="submit" class={{@classNames}} disabled={{@loading}}>
  {{#if @loading}}
    <span class="spinner animate-spin inline-block w-4 h-4 rounded-full" role="status">
      <span class="sr-only">Loading...</span>
    </span>
    {{#if @textLoading}}{{@textLoading}}{{else}}{{yield}}{{/if}}
  {{else}}
    {{yield}}
  {{/if}}
</button>