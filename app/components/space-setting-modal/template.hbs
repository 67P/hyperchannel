<h1>Space Setting</h1>

<form {{action "save" on="submit"}} name="add-space">
  <p>
    {{input value=space.protocol required="required" placeholder="IRC"}}
  </p>
  <p>
    {{input value=space.name required="required" placeholder="Freenode"}}
  </p>
  <p>
    {{input value=space.server.hostname required="required" placeholder="irc.servername.org"}}
  </p>
  <p>
    {{input value=space.server.port required="required" placeholder="6667"}}
  </p>
  <p>
    {{input type="checkbox" checked=space.server.secure id="tls-enabled-modal"}}
    <label for="tls-enabled-modal">Secure (TLS)</label>
  </p>
  <p>
    {{input value=space.server.username placeholder="username"}}
  </p>
  <p>
    {{input type="password" value=space.server.password placeholder="password"}}
  </p>
  <p>
    {{input value=space.server.nickname required="required" placeholder="nickname"}}
  </p>
  <p>
    <input type="submit" value="Save">
  </p>
</form>

<button {{action "cancel"}} type="button">Cancel</button>
