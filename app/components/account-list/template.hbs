<div class="flex bg-gray-800 text-white pl-6 pr-3 py-3 rounded-t-md">
  <h2 class="flex-grow">Accounts</h2>
  <button {{on "click" this.addAccount}}
    class="inline-block btn-sm btn-blue flex-none">
    Add
  </button>
</div>

<div class="w-full divide-y divide-gray-300">
  {{#each this.coms.accounts as |account|}}
    <div class="flex items-center">
      <h3 class="flex-grow px-6 py-5 font-bold">
        {{account.id}}
      </h3>
      <button title="Delete"
              class="btn-icon-sm btn-red-hover mr-3">
        <IconTrash />
      </button>
    </div>
  {{/each}}
</div>